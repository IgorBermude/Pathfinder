<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Avatar do usuário -->
    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Avatar"
        android:src="@android:drawable/ic_menu_help"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nome do usuário -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_user_avatar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Data do post -->
    <TextView
        android:id="@+id/tv_post_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12/08/2025"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintStart_toStartOf="@id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Conteúdo do post -->
    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Conteúdo do post aqui..."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_post_time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Imagem do post -->
    <ImageView
        android:id="@+id/iv_post_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_post_content"
        app:layout_constraintStart_toStartOf="@id/tv_post_content"
        app:layout_constraintEnd_toEndOf="@id/tv_post_content"
        android:layout_marginTop="8dp" />

    <!-- Botões de ação -->
    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_post_image"
        app:layout_constraintStart_toStartOf="@id/tv_post_content"
        app:layout_constraintEnd_toEndOf="@id/tv_post_content"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/ib_like"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/btn_star_big_off"
            android:contentDescription="Curtir" />

        <ImageButton
            android:id="@+id/ib_comment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Comentar"
            android:layout_marginStart="16dp"/>

        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="Compartilhar"
            android:layout_marginStart="16dp"/>

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Deletar"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
